{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "vacation-builder",
  "version": "1.0.0",
  "identifier": "com.vacationbuilder.app",
  "build": {
    "frontendDist": "../src/renderer",
    "beforeDevCommand": "",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "title": "Vacation Builder",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["../backend/**/*"]
  }
}
